<UserControl x:Class="Bank.AddAccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="50" Width="750">
    <Grid>
        <Button Content="Add New Bank Account" Click="OnAddAccountClick" Margin="0,0,150,0" />
        <ComboBox x:Name="accountTypeComboBox" Margin="600, 0, 0, 0">
            <ComboBoxItem Content="Current account"/>
            <ComboBoxItem Content="Savings account"/>
        </ComboBox>
    </Grid>
</UserControl>
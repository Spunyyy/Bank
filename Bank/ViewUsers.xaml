<Page x:Class="Bank.ViewUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bank"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewUsers">

    <Grid>
        <ListView x:Name="usersListView"  Margin="10,10,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="40" DisplayMemberBinding="{Binding UserId}"/>
                    <GridViewColumn Header="Username" Width="80" DisplayMemberBinding="{Binding UserName}"/>
                    <GridViewColumn Header="Name" Width="80" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Surname" Width="80" DisplayMemberBinding="{Binding Surname}"/>
                    <GridViewColumn Header="AccountType" Width="80" DisplayMemberBinding="{Binding UserType}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Page>
